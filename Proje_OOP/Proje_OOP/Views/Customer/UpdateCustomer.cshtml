@model Proje_OOP.Entity.Customer
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Güncelleme Sayfası</h1>

<form method="post">
    @Html.Label("ID")
    @Html.TextBoxFor(x=>x.ID,new{@class="form-control"})
    <br />
    @Html.Label("İsim Soyisim")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    @Html.Label("Şehir")
    @Html.TextBoxFor(x=>x.City,new{@class="form-control"})
    <br />
    <button class="btn btn-info">Kullanıcıyı Güncelle</button>
</form>
