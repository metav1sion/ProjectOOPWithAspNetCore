@model Proje_OOP.Entity.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}
<a href="~/lib/jquery/dist/jquery.min.map"></a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<h1>Müşteri Ekleme</h1>
<form method="post">
    @Html.Label("İsim Soyisim")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    @Html.Label("Şehir")
    @Html.TextBoxFor(x=>x.City,new{@class="form-control"})
    <br />
    <button class="btn btn-info">Müşteri Ekle</button>
</form>



